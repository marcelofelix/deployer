<section>
  <div class="form-group">
    <label>Name: </label>
    <span><%= @env.name %></span>
  </div>
  <div class="form-group">
    <label>Bucket: </label>
    <span><%= @env.bucket_name %></span>
  </div>
</section>
<div>
  <table class="table">
    <tr>
      <th>File</th>
      <th>key</th>
      <th>Value</th>
      <th></th>
    </tr>
    <tr>
      <%= form_tag '/replaces', method: :post do %>
        <input type="hidden" name="id" value="<%= @env.id %>">
        <input type="hidden" name="project_id" value="<%= @env.project.id %>">
        <td><input id="file" name="replace[file]" class="form-control"></td>
        <td><input id="key" name="replace[key]" class="form-control"></td>
        <td><input id="value" name="replace[value]" class="form-control"></td>
        <td>
          <button type="submit" class="btn btn-primary btn-sm">Add</button>
        </td>
      <% end %>
    </tr>
    <% @env.replaces.each do |r| %>
      <tr>
        <td><%= r.file %></td>
        <td><%= r.key %></td>
        <td><%= r.value %></td>
        <td>
          <a class="btn btn-link smal remove-replace"
             data-id="<%= r.id %>">
             <span class="glyphicon glyphicon-remove"></span>
          </a>
        </td>
      </tr>
    <% end %>
  </table>
</div>
