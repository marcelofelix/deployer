<div class="container">
  <div class="form-group row">
    <label class="control-label" for="name">Name</label>
    <input class="form-control" type="text" id="name" name="name" value="<%= @project.name %>">
  </div>
  <div class="form-group row">
    <label class="control-label" for="bucket">Bucket</label>
    <input class="form-control" type="text" id="bucket" name="bucket" value="<%= @project.bucket_name %>">
  </div>
  <ul class="list-group row" id="env-list">
    <li class="list-group-item active">
      <span>Environments</span>
    </li>
    <li class="list-group-item">
      <div class="form-inline">
        <div class="form-group">
          <label class="control-label" for="env_name">Env:</label>
          <input class="form-control" type="text" id="env_name" name="env_name">
        </div>
        <div class="form-group">
          <label class="control-label" for="env_bucket">Bucket</label>
          <input class="form-control" type="text" id="env_bucket" name="env_bucket">
        </div>
        <button class="btn btn-primary" id="btnAddEvn">Add</button>
      </div>
    </li>
  </ul>
  <footer class="row text-right">
    <button class="btn btn-danger">Cancelar</button>
    <button class="btn btn-primary" id="btnSaveProject">Salvar</button>
  </footer>
</div>
